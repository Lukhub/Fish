@model Fish.Models.Animal

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />

    <table style="column-gap: 40px">
        <tr>
            @if (Model.Photo != null)
            {
                <td><img src="~/images/@Model.Photo" height="200" width="200" /></td>
                <td></td>
            }
            <td>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CareLevel)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CareLevel)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Temparament)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Temparament)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MaxSize)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MaxSize)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Genus)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Genus.Name)
                    </dd>
                </dl>
            </td>
        </tr>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
