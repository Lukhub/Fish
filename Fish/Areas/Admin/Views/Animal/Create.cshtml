@model Fish.Models.Animal
@{ ViewData["Title"] = "Create"; }

<h1>Create</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CareLevel" class="control-label"></label>
                <select asp-for="CareLevel" asp-items="Html.GetEnumSelectList<CareLevel>()" class="form-control"></select>
                <span asp-validation-for="CareLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temparament" class="control-label"></label>
                <select asp-for="Temparament" asp-items="Html.GetEnumSelectList<Temparament>()" class="form-control"></select>
                <span asp-validation-for="Temparament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxSize" class="control-label"></label>
                <input asp-for="MaxSize" class="form-control" />
                <span asp-validation-for="MaxSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenusID" class="control-label"></label>
                <select asp-for="GenusID" class="form-control" asp-items="ViewBag.GenusID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

